# Celora Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Next.js
NEXT_PUBLIC_APP_URL=https://celora.vercel.app

# Firebase Configuration (for Authentication & Firestore)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=celora-7b552.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=celora-7b552
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=celora-7b552.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side)
FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"celora-7b552",...}'

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=https://celora.net
JWT_SECRET=your_jwt_secret_key

# KMS & Encryption
KMS_MASTER_KEY_ID=default-master-key
ENCRYPTION_KEY_ROTATION_DAYS=30
WALLET_ENCRYPTION_KEY=your_secure_wallet_backup_encryption_key
SEED_PHRASE_ENCRYPTION_KEY=your_seed_phrase_encryption_key
MASTER_ENCRYPTION_KEY=your_master_encryption_key
API_SECRET_KEY=your_api_secret_key
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Feature Flags
ENABLE_VIRTUAL_CARDS=true
ENABLE_CRYPTO_WALLETS=true
ENABLE_CROSS_PLATFORM_TRANSFERS=true
ENABLE_RISK_SCORING=true
ENABLE_PIN_PROTECTION=true
ENABLE_AUDIT_LOGGING=true

# Development/Production
NODE_ENV=development
VERCEL_ENV=development

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_ANALYTICS=false

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# Security
CORS_ORIGIN=https://celora.net
ALLOWED_DOMAINS=celora.net,www.celora.net,localhost,127.0.0.1

# Database - Neon PostgreSQL (Serverless)
# Neon provides both pooled and direct connection strings
# Get from: https://console.neon.tech/app/projects/empty-cell-79611710
DATABASE_URL=postgresql://user:password@ep-xx.us-east-1.aws.neon.tech/celora?sslmode=require
DIRECT_DATABASE_URL=postgresql://user:password@ep-xx.us-east-1.aws.neon.tech/celora?sslmode=require

# Alternative: Use Vercel Postgres (if you prefer)
# POSTGRES_URL=provided_by_vercel
# POSTGRES_PRISMA_URL=provided_by_vercel
# POSTGRES_URL_NON_POOLING=provided_by_vercel

# Blockchain RPC Endpoints - REAL NETWORK INTEGRATION
# Ethereum
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY
ETHEREUM_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key-for-transactions

# Helius RPC (Solana - Premium Performance)
HELIUS_API_KEY=your_helius_api_key_here
NEXT_PUBLIC_HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_key
HELIUS_API_MAINNET_TRANSACTIONS=https://api-mainnet.helius-rpc.com/v0/transactions/?api-key=your_key
HELIUS_API_MAINNET_ADDRESS_TRANSACTIONS=https://api-mainnet.helius-rpc.com/v0/addresses
NEXT_PUBLIC_HELIUS_DEVNET_URL=https://devnet.helius-rpc.com/?api-key=your_key
HELIUS_API_DEVNET_TRANSACTIONS=https://api-devnet.helius-rpc.com/v0/transactions/?api-key=your_key
HELIUS_API_DEVNET_ADDRESS_TRANSACTIONS=https://api-devnet.helius-rpc.com/v0/addresses

# Solana - Legacy (use Helius above instead)
SOLANA_RPC_URL=your_quiknode_solana_rpc_url
SOLANA_WSS_URL=your_quiknode_solana_wss_url
SOLANA_TESTNET_RPC_URL=https://api.testnet.solana.com
SOLANA_PRIVATE_KEY=your-solana-private-key-base58

# Bitcoin
BITCOIN_RPC_URL=https://your-bitcoin-node-or-service
BITCOIN_TESTNET_RPC_URL=https://your-bitcoin-testnet-node
BITCOIN_PRIVATE_KEY=your-bitcoin-private-key-wif

# Wallet Security (Duplicate removed - already defined above)
# WALLET_ENCRYPTION_KEY=your-32-byte-encryption-key-for-wallet-storage

# Vercel Blob Storage (for files, images, NFTs)
BLOB_READ_WRITE_TOKEN=vercel_blob_token_from_dashboard

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
ALCHEMY_API_KEY=your-alchemy-api-key
BLOCKCHAIR_API_KEY=your-blockchair-bitcoin-api-key

# Feature Control
ENABLE_REAL_BLOCKCHAIN=true