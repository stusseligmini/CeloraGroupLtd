{
  "manifest_version": 3,
  "name": "Celora Solana Wallet",
  "version": "1.0.0",
  "description": "Secure Solana wallet integrated with Celora platform",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms",
    "windows"
  ],
  "host_permissions": [
    "https://app.celora.azure/*",
    "https://celora.azurewebsites.net/*",
    "https://api.celora.azure/*",
    "https://*.b2clogin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background/service-worker.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; upgrade-insecure-requests"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
